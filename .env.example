# ============================================
# PAGIA - Plano de Ação de Gestão e Implementação com IA
# Configuração de API Keys
# ============================================
# ============================================
# ZAI / GLM API (Zhipu AI)
# ============================================
ZAIA_GLM_4_PLUS_API_KEY=
GLM_MODEL=GLM-4-Plus

# Provedor de IA padrão (gemini, openai, anthropic, groq, ollama, deepseek, mistral, openrouter)
AI_PROVIDER=gemini

# ============================================
# Google Gemini API
# Modelos: gemini-2.5-pro-preview-06-05 (Gemini 3 Pro Low), gemini-2.5-flash-preview-05-20 (Gemini 3 Flash)
# ============================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro-preview-06-05

# Fallback automático: quando tokens acabam, usa próximo modelo da lista
# Lista de fallback: gemini-2.5-pro-preview-06-05 -> gemini-2.5-flash-preview-05-20 -> gemini-2.0-flash-exp -> gemini-1.5-flash
GEMINI_FALLBACK_ENABLED=true

# ============================================
# OpenAI API (opcional)
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
# OPENAI_BASE_URL=https://api.openai.com/v1 # Para APIs compatíveis

# ============================================
# Anthropic Claude API (opcional)
# Modelos: claude-sonnet-4-20250514 (Claude Sonnet 4.5), claude-opus-4-20250514 (Claude Opus 4.5)
# ============================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ============================================
# Groq API (opcional) - Rápido e gratuito para alguns modelos
# https://console.groq.com/
# ============================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# ============================================
# Ollama (Local) - Modelos locais
# https://ollama.ai/
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# ============================================
# DeepSeek API (opcional)
# https://platform.deepseek.com/
# ============================================
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# ============================================
# Mistral API (opcional)
# https://console.mistral.ai/
# ============================================
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=mistral-large-latest

# ============================================
# OpenRouter (opcional) - Acesso a múltiplos modelos
# https://openrouter.ai/
# ============================================
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ============================================
# Configurações do PAGIA
# ============================================
PAGIA_FOLDER=.pagia
PAGIA_LANGUAGE=pt-BR
PAGIA_DEBUG=false

# Configurações de Projeto
PROJECT_ROOT=./
USER_NAME=Developer

# ============================================
# N8N MCP Server Integration
# Para conectar ao servidor MCP nativo do N8N
# ============================================
N8N_MCP_URL=https://n8n.automacoescomerciais.com.br/mcp-server/http
N8N_MCP_TOKEN=your_n8n_mcp_jwt_token_here

# ============================================
# N8N REST API (opcional)
# Para acesso via API tradicional do N8N
# ============================================
# N8N_BASE_URL=https://n8n.example.com
# N8N_API_KEY=your_n8n_api_key_here

# ============================================
# ZAI / GLM API (Zhipu AI)
# ============================================
ZAIA_GLM_4_PLUS_API_KEY=your_api_key_here
GLM_MODEL=GLM-4-Plus
